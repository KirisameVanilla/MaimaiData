<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:elevation="1dp"
    android:focusable="true"
    android:orientation="vertical"
    android:visibility="invisible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <include
                android:id="@+id/searchBarLayout"
                layout="@layout/search_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/level" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/levelSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/dxp_song_level" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/sequencing" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sortSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/difficulty_rank" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/sort" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/popCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/pop" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/nicoCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/niconico" />


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/touhouCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/touhou" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/gameVarietyCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/game_variety" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/maimaiSortCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/maimai" />


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/ongekiChuniCheck"
                android:text="@string/ongeki_chuni"
                style="@style/SearchCheckBoxStyle" />

        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/version" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/maimaiCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/maimai" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/greenCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/green" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/orangeCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/orange" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pinkCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/pink" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/murasakiCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/murasaki" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/milkCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/milk" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/finaleCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/finale" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/dxCheck"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/dx" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/dx2021Check"
                style="@style/SearchCheckBoxStyle"
                android:text="@string/dx2021" />
        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#999999" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:text="@string/favor"
                android:id="@+id/favorCheck"
                style="@style/SearchCheckBoxStyle"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/closeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        android:orientation="horizontal" />
</LinearLayout>